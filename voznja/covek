public class Covek {
	private String ime;
	private double tezina;
	private static int uid = 0;
	private int id;
	
	public Covek (String ime, double tezina) {
		this.ime = ime;
		this.tezina = tezina;
		this.id = ++uid; 
	}
	
	public String getIme () {
		return this.ime;
	}

	public double getTezina () {
		return this.tezina;
	}
	
	public int getId () {
		return this.id;
	}
	
	@Override
	public String toString () {
		return ("["+this.id+"]"+this.ime+":{"+this.tezina+"}");
	}
}
